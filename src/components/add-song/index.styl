@import '~common/stylus/mixin.styl'
@import '~common/stylus/variable.styl'

.add-song
	position: fixed
	top: 0
	right: 0
	bottom: 0
	left: 0
	z-index: 210
	background: $color-background
	&.slide-enter
		transform: translate3d(100%, 0, 0)
	&.slide-enter-active
		transform: translate3d(0, 0, 0)
		transition: all 300ms
	&.slide-exit
		transform: translate3d(0, 0, 0)
	&.slide-exit-active
		transform: translate3d(100%, 0, 0)
		transition: all 300ms
	.header
		position: relative
		height: 44px
		text-align: center
		.title
			line-height: 44px
			font-size: $font-size-large
			color: $color-text
		.close
			position: absolute
			top: 0
			right: 8px
			.icon-close
				display: block
				padding: 12px
				font-size: 20px
				color: $color-theme
	.search-box-wrapper
		margin: 20px
	.shortcut
		.list-wrapper
			position: absolute
			top: 165px
			bottom: 0
			width: 100%
			.list-scroll
				height: 100%
				overflow: hidden
				.list-inner
					padding: 20px 30px
	.search-result
		position: fixed
		top: 124px
		bottom: 0
		width: 100%
	.tip-title
		text-align: center
		padding: 18px 0
		font-size: 0
		.icon-ok
			font-size: $font-size-medium
			color: $color-theme
			margin-right: 4px
		.text
			font-size: $font-size-medium
			color: $color-text