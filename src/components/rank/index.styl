@import '~common/stylus/variable.styl'
@import '~common/stylus/mixin.styl'

.rank
	position: fixed
	top: 88px
	left: 0
	bottom: 0
	width: 100%
	.toplist
		height: 100%
		overflow: hidden
		.item
			display: flex
			margin: 0 20px
			padding-top: 20px
			height: 100px
			&:last-child
				padding-bottom: 20px
			.icon
				flex: 0 0 100px
				width: 100px
				height: 100px
			.songlist
				flex: 1
				padding: 0 20px
				display: flex
				flex-direction: column
				justify-content: center
				height: 100px
				overflow: hidden
				background: $color-highlight-background
				color: $color-text-d
				font-size: $font-size-small
				.song
					line-height: 26px
					no-wrap()
		.loading-container
			position: absolute
			top: 50%
			width: 100%
			transform: translateY(-50%)