@import '~common/stylus/variable.styl'

.search-box
	display: flex
	align-items: center
	box-sizing: border-box
	width: 100%
	height: 40px
	padding: 0 6px
	border-radius: 6px
	background: $color-highlight-background
	.icon-search
		font-size: 24px
		color: $color-background
	.box
		flex: 1
		margin: 0 5px
		line-height: 18px
		background: $color-highlight-background
		color: $color-text
		font-size: $font-size-medium
		&::placeholder
			color: $colot-text-d
	.icon-dismiss
		font-size: 16px
		color: $color-background